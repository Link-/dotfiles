#!/usr/bin/env bash

## git configuration
git config --global pull.rebase true
git config --global push.autoSetupRemote true

##
# Change the default shell to fish
##
fish_path=$(grep "fish" /etc/shells | head -n 1)
sudo chsh -s $fish_path vscode

##
# Install omf
##
curl https://raw.githubusercontent.com/oh-my-fish/oh-my-fish/90f875e02dbb63a7e12430ceb034206bea278c28/bin/install | fish
# Install pure theme
omf install pure
